<Page x:Class="FoodeLive.Pages.Home.All"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FoodeLive.Pages.Home" xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      mc:Ignorable="d"
      xmlns:c="clr-namespace:FoodeLive.utils"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="All">

    <Page.Resources>
        <c:WindowUtils x:Key="width" />
    </Page.Resources>
    <Page.DataContext>
        <Binding Source="{StaticResource width}" />
    </Page.DataContext>
    <Grid Margin="0,24,0,0">
        <Grid.RowDefinitions>
            <RowDefinition />
        </Grid.RowDefinitions>
        <ui:VirtualizingGridView x:Name="all_table" SelectionChanged="all_table_SelectionChanged" Height="auto" Grid.Row="0" ScrollViewer.VerticalScrollBarVisibility="Hidden" VerticalAlignment="Top" SpacingMode="BetweenItemsOnly" SelectionMode="Single">
            <ui:Card x:Name="hehe" Effect="{StaticResource DropShadow}" Background="#fff" BorderThickness="0" Width="{Binding CardWidth}">
                <Grid HorizontalAlignment="Left" Height="100">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="0.5*" />
                        <RowDefinition Height="1"/>
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" Text="Bàn 1" FontWeight="Bold" FontSize="16" />
                    <Separator Grid.Row="1" Width="100" BorderBrush="#000" Opacity="0.5"/>
                    <StackPanel Grid.Row="2" VerticalAlignment="Bottom">
                        <TextBlock FontSize="10" Foreground="#ABABAB">
                            Tình trạng: <TextBlock Text="Trống" />
                        </TextBlock>
                        <TextBlock Margin="0, 4" FontSize="10" Foreground="#ABABAB">
                            Loại bàn: <TextBlock Text="Thường" />
                        </TextBlock>
                    </StackPanel>
                </Grid>
            </ui:Card>
            <ui:Card Effect="{StaticResource DropShadow}" Background="#fff" BorderThickness="0" Width="{Binding CardWidth}">
                <Grid HorizontalAlignment="Left" Height="100">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="0.5*" />
                        <RowDefinition Height="1"/>
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" Text="Bàn 1" FontWeight="Bold" FontSize="16" />
                    <Separator Grid.Row="1" Width="100" BorderBrush="#000" Opacity="0.5"/>
                    <StackPanel Grid.Row="2" VerticalAlignment="Bottom">
                        <TextBlock FontSize="10" Foreground="#ABABAB">
                            Tình trạng: <TextBlock Text="Trống" />
                        </TextBlock>
                        <TextBlock Margin="0, 4" FontSize="10" Foreground="#ABABAB">
                            Loại bàn: <TextBlock Text="Thường" />
                        </TextBlock>
                    </StackPanel>
                </Grid>
            </ui:Card>
        </ui:VirtualizingGridView>
    </Grid>
</Page>
