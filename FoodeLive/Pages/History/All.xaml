<Page x:Class="FoodeLive.Pages.History.All"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FoodeLive.Pages.History" xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="All"
       DataContext="{StaticResource OrderViewModel}"
      >

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" VerticalAlignment="Center">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <Grid VerticalAlignment="Center" Height="60">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="100" />
                    </Grid.ColumnDefinitions>
                   
                    <ui:Button Icon="CalendarArrowRight16"
                        Grid.Column="0" 
                               Content="Ngày hóa đơn" 
                               Background="#FF7A00" 
                               Foreground="#fff" 
                               FontSize="12" 
                               Height="{Binding Height, ElementName=search_tb}" 
                               Padding="20,0" 
                               HorizontalAlignment="Left" 
                               PressedBorderBrush="Transparent" 
                               PressedForeground="#FF7A00" 
                               MouseOverBackground="#FF7A00" 
                               BorderThickness="0"/>

                </Grid>
                 <Grid Grid.Column="2" VerticalAlignment="Center" Height="60">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="100" />
                    </Grid.ColumnDefinitions>
                    <ui:TextBox Icon="Search20" PlaceholderText="Bàn 31, bàn 32..." x:Name="search_tb" Height="35"/>
                    <ui:Button Grid.Column="1" Content="Tìm kiếm" Background="#FF7A00" Foreground="#fff" FontSize="12" Height="{Binding Height, ElementName=search_tb}" Padding="20,0" HorizontalAlignment="Right" PressedBorderBrush="Transparent" PressedForeground="#FF7A00" MouseOverBackground="#FF7A00" BorderThickness="0"/>
                </Grid>
            </Grid>
            <Separator Background="LightGray" />
            
        </StackPanel>
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="40"></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0" VerticalAlignment="Bottom" FontWeight="Bold" >Chủ nhật, ngày 11 tháng 12 năm 2022</TextBlock>
            <ListView Grid.Row="1" ItemsSource="{Binding ListHoaDon , Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ListViewItem>
                            <StackPanel Width="auto" Height="auto" HorizontalAlignment="Left">
                                <StackPanel Orientation="Horizontal">
                                    <Grid >
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="25"></ColumnDefinition>
                                            <ColumnDefinition></ColumnDefinition>
                                        </Grid.ColumnDefinitions>
                                        <ui:SymbolIcon Grid.Column="0" HorizontalAlignment="Left" HorizontalContentAlignment="Left"></ui:SymbolIcon>
                                        <TextBlock Grid.Column="1" Foreground="Black" Text="{Binding TriGia}"></TextBlock>
                                    </Grid>

                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <Grid>

                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="auto"></ColumnDefinition>
                                            <ColumnDefinition Width="10"></ColumnDefinition>
                                            <ColumnDefinition Width="auto"></ColumnDefinition>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Grid.Column="0" Text="{Binding SoHoaDon}"></TextBlock>
                                        <Separator Grid.Column="1" HorizontalAlignment="Center"></Separator>
                                        <TextBlock Grid.Column="2" Text="{Binding MaBanAn}"></TextBlock>

                                    </Grid>

                                </StackPanel>
                                <TextBlock Text="{Binding NgayLapHoaDon}"></TextBlock>
                                <TextBlock>Món: Mỳ ý, Beafstack, Cơm trắng, Thịt áp chảo</TextBlock>
                            </StackPanel>
                        </ListViewItem>

                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

        </Grid>
       

    </Grid>
</Page>
